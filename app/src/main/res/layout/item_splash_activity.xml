<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/img_bookshelf" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="25dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/header_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_splash"
            android:textColor="@color/white"
            android:fontFamily="@font/manofik_bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/content_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There are over 1000 audio fairy stories from around from the world from our app"
            android:fontFamily="@font/gt_walshiem"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>